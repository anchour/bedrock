{
  "name": "anchour/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "http://anchour.com",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    },
    {
      "name": "Matt Robitaille",
      "email": "matt@anchour.com",
      "homepage": "https://github.com/mrobit"
    }
  ],
  "keywords": [
    "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/anchour/bedrock/issues"
  },
  "config": {
    "preferred-install": "dist",
    "generate-salts": true
  },
  "autoload": {
    "psr-0": {"Bedrock\\Installer": "scripts"}
  },
  "scripts": {
    "post-install-cmd": ["Bedrock\\Installer::addSalts"]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "version": "4.1",
        "type": "webroot",
        "dist": {
          "type": "zip",
          "url": "https://wordpress.org/wordpress-4.1.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.3.2",
    "wordpress/wordpress": "4.1",
    "fancyguy/webroot-installer": "1.1.0",
    "composer/installers": "v1.0.12",
    "vlucas/phpdotenv": "~1.0.6",
    "wpackagist-plugin/advanced-custom-fields": "~4.3",
    "wpackagist-plugin/amazon-s3-and-cloudfront": "~0.8",
    "wpackagist-plugin/amazon-web-services": "~0.2",
    "wpackagist-plugin/backwpup": "~3.1",
    "wpackagist-plugin/better-wp-security" : "~4.5",
    "wpackagist-plugin/bruteprotect": "~2.4",
    "wpackagist-plugin/cms-tree-page-view": "~1.2",
    "wpackagist-plugin/iwp-client": "~1.3",
    "wpackagist-plugin/jetpack": "~3.3",
    "wpackagist-plugin/simple-301-redirects": "~1.0",
    "wpackagist-plugin/wordpress-seo": "~1.7",
    "wpackagist-plugin/wordpress-importer": "~0.6",
    "wpackagist-plugin/wpmandrill": "~1.3",
    "wpackagist-plugin/wp-super-cache": "~1.4"
  },
  "extra": {
    "installer-paths": {
      "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "webroot-dir": "public/wp",
    "webroot-package": "wordpress/wordpress"
  }
}

